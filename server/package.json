{
  "name": "civilens-server",
  "version": "1.0.0",
  "description": "CiviLens Backend API â€” civic complaint management with SLA enforcement",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "start:prod": "npx prisma db push --skip-generate && node src/server.js",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "node prisma/seed.js",
    "db:studio": "npx prisma studio",
    "healthcheck": "node -e \"fetch('http://localhost:' + (process.env.PORT||4000) + '/api/v1/health').then(r=>r.json()).then(d=>{ console.log(d); process.exit(d.success?0:1) }).catch(()=>process.exit(1))\""
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "twilio": "^5.12.2"
  },
  "devDependencies": {
    "prisma": "^6.4.1"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
