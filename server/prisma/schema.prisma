generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─── Models ─────────────────────────────────────────────────────────────────

model User {
  id           String   @id @default(uuid())
  phone        String   @unique
  email        String?  @unique
  passwordHash String?
  name         String?
  role         String   @default("CITIZEN")
  department   String?          // For authority users (e.g., "Water Supply")
  designation  String?          // e.g., "Ward Engineer", "Commissioner"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  complaints         Complaint[]  @relation("CitizenComplaints")
  assignedComplaints Complaint[]  @relation("AssignedComplaints")

  @@map("users")
}

model Department {
  id         String      @id @default(uuid())
  name       String      @unique
  createdAt  DateTime    @default(now())

  complaints Complaint[]
  slaRules   SLARule[]

  @@map("departments")
}

model SLARule {
  id           String     @id @default(uuid())
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])
  issueType    String
  severity     String
  hoursAllowed Int

  @@unique([departmentId, issueType, severity])
  @@map("sla_rules")
}

model Complaint {
  id             String    @id @default(uuid())
  citizenId      String
  citizen        User      @relation("CitizenComplaints", fields: [citizenId], references: [id])
  departmentId   String
  department     Department @relation(fields: [departmentId], references: [id])

  issueType      String
  description    String?
  imageUrl       String?
  proofImageUrl  String?

  latitude       Float
  longitude      Float
  locationLabel  String?

  severity       String
  priorityScore  Int         // 0–100, calculated on submission
  priorityBreakdown Json?   // { severity, zone, population, duplicates }
  status         String      @default("SUBMITTED")

  slaDeadline    DateTime
  slaBreached    Boolean     @default(false)

  assignedToId   String?
  assignedTo     User?       @relation("AssignedComplaints", fields: [assignedToId], references: [id])

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  resolvedAt     DateTime?

  statusHistory  StatusHistory[]
  duplicateOf    String?

  @@index([citizenId])
  @@index([departmentId])
  @@index([status])
  @@index([slaBreached])
  @@index([slaDeadline])
  @@map("complaints")
}

model StatusHistory {
  id          String    @id @default(uuid())
  complaintId String
  complaint   Complaint @relation(fields: [complaintId], references: [id])
  status      String
  note        String?
  changedById String
  createdAt   DateTime  @default(now())

  @@index([complaintId])
  @@map("status_history")
}
